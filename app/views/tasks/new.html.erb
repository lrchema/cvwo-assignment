<h1>New Task</h1>

<%= form_with scope: :task, url: tasks_path, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
 
  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>
  <p>
    <%= form.label :start %><br>
    <%= form.date_field :start, as: :date, value: form.object.try(:strftime,"%m/%d/%Y"), class: 'form-control' %>
  </p>
  <p>
    <%= form.label :due_date %><br>
    <%= form.date_field :due_date, as: :date, value: form.object.try(:strftime,"%m/%d/%Y"), class: 'form-control' %>
  </p>
  <p>
    <%= form.label :end_date %><br>
    <%= form.date_field :end_date, as: :date, value: form.object.try(:strftime,"%m/%d/%Y"), class: 'form-control' %>
  </p>
  <p>
    <%= form.label :status %><br>
    <%= form.collection_select(:status_id, Status.all, :id, :name) %>
  </p>
  <p>
    <%= form.label :priority %><br>
    <%= form.collection_select(:priority_id, Priority.all, :id, :name) %>
  </p>
  <p>
    <%= form.label :category %><br>
    <%= form.collection_select(:type_id, Type.all, :id, :name) %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>